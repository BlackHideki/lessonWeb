<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.ui.theme" value="simple" />
	<package name="action" extends="struts-default">
		<action name="SelectChat" class="action.SelectChatAction">
			<result name="success">chat_room.jsp</result>
		</action>

		<action name="InsertChat" class="action.InsertChatAction">
			<result name="success" type="chain">SelectChat</result>
			<result name="error">chat_room.jsp</result>
		</action>
	</package>
</struts>